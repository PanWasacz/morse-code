<head>
  <title>SUPER PROGRAM</title>
  <meta charset= "UTF-8">

  <script type="text/javascript">

    letters = "abcdefghijklmnoprstuwvxyz ";
    mors_codes = ['.-', '-...', '-.-.', '-..', '.', '..-.', '-..', '....', '..', '.---', '-.-', '.-..', '--', '-.', '---', '.--.', '.-.', '...', '-', '..-', '.--', '...-', '-..-','-.-', '--..', '/ '];

    // alert(mors_codes.indexOf('-.-.'));
    
    function code() {
      nocode = document.getElementById('text1').value;
      code = '';
      for (i = 0; i < nocode.length; i++) {
        code = code + ' ' + codeletter(nocode[i]) + ' / ';
      }

      document.getElementById('text2').value = code;


      zz = codeletter('f');
     
    }
    
    function decode() { 
    z = document.getElementById('text2').value;
    document.getElementById('text1').value = z;
    }
    
    function codeletter(let) {
      index = letters.indexOf(let);
      return mors_codes[index];
    }

  </script>
</head>

  <body style="margin: 5%;">
    <input type="text" name="text1" value="zakoduj" id="text1" style="width: 100%;"> 

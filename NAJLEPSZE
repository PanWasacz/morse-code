    <div style="text-align: center; margin: 20px;">
      <input type="submit" value="code" id="submit1" onclick="code()">
      <input type="submit" value="decode" id="sumbit2" onclick="decode()">
    </div>
    <input type="text" name="text2" value=" " id="text2" style="width: 100%;">
